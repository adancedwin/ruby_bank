<% if flash[:alert].present? %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>


<%= form_with url: session_path, method: :post do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Log in" %>
  </div>
<% end %>